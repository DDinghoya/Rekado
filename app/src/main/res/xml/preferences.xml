<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings_category_appearance" />

    <Preference
        android:icon="@drawable/ic_settings_appearance_theme"
        android:key="appearance_theme"
        android:summary="@string/settings_appearance_theme_summary"
        android:title="@string/settings_appearance_theme_title" />

    <CheckBoxPreference
        android:icon="@drawable/ic_settings_appearance_dynamic_colors"
        android:key="appearance_dynamic_colors"
        android:defaultValue="true"
        android:summary="@string/settings_appearance_dynamic_colors_summary"
        android:title="@string/settings_appearance_dynamic_colors_title" />

    <PreferenceCategory android:title="@string/settings_category_auto_injector" />

    <CheckBoxPreference
        android:icon="@drawable/ic_settings_auto_injector"
        android:key="auto_injector_enable"
        android:summary="@string/settings_auto_injector_status_summary"
        android:title="@string/settings_auto_injector_status_title" />

    <Preference
        android:enabled="false"
        android:icon="@drawable/ic_settings_payload"
        android:key="auto_injector_payload"
        android:title="@string/settings_auto_injector_payload_title" />

    <PreferenceCategory android:title="@string/settings_category_payloads" />

    <CheckBoxPreference
        android:icon="@drawable/ic_settings_payloads_hide"
        android:key="payloads_hide"
        android:title="@string/settings_payloads_hide_title" />

    <Preference
        android:icon="@drawable/ic_settings_payloads_clear"
        android:key="payloads_reset"
        android:title="@string/settings_payloads_reset_title" />

</PreferenceScreen>