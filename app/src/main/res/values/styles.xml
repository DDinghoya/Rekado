<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.Text" parent="android:Widget.TextView" />

    <style name="Widget.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Widget.Toolbar.Title</item>
    </style>

    <style name="Widget.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ibm_plex_semi_bold</item>
        <item name="android:fontFamily">@font/ibm_plex_semi_bold</item>
    </style>

    <style name="Widget.Text.Subtitle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ibm_plex_semi_bold</item>
    </style>

    <style name="Widget.Text.Subtitle.Padding">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ibm_plex_semi_bold</item>
    </style>

</resources>